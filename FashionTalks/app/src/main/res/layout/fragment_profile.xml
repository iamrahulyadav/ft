<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    tools:context="com.mallardduckapps.fashiontalks.ProfileActivity$PlaceholderFragment">

    <com.makeramen.RoundedImageView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/profileThumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/nameLayout"
        android:layout_toRightOf="@+id/profileThumbnail"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"/>
        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"/>
        <View
            style="@style/Divider1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/glamCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="GLAM COUNT"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/profile_glam_icon"/>
        </LinearLayout>
    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/aboutMeText"
        android:layout_below="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:maxLines="2"/>
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutMeText">
        <Button
            android:id="@+id/followButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gallery_card_drawable"
            android:text="@string/follow"
            android:layout_marginLeft="2dp"
            android:textSize="12dp"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:id="@+id/followersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/followers"
            android:textSize="13dp"
            android:padding="3dp"
            android:layout_marginLeft="7dp"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/followingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/following"
            android:textSize="13dp"
            android:padding="3dp"
            android:layout_toLeftOf="@+id/followersButton"/>
        </RelativeLayout>
    <com.mallardduckapps.fashiontalks.components.BounceListView
        android:id="@+id/uploadsList"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:dividerHeight="0dp"
        android:divider="@color/white"
        android:layout_below="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.mallardduckapps.fashiontalks.components.BounceListView>
</RelativeLayout>
