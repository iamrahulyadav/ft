<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Base application theme.-->
    <style name="FTTheme" parent="@style/Theme.AppCompat.Light.NoActionBar"> <!-- "@style/Theme.AppCompat.Light"-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="contentInsetStart">0dp</item>-->
        <!--<item name="android:windowActionBar">false</item> -->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
</style>
<!-- Customize your theme here.   Theme.DeviceDefault.Light.DarkActionBar  "android:Theme.Holo.Light.DarkActionBar"  style/Theme.AppCompat.Light-->
    <style name="FTActionBarTabText"
        parent="android:Widget.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
        <!-- The textColor property is backward compatible with the Support Library  @style/Widget.AppCompat.ActionBar.TabText-->
    </style>
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>

    <style name="Divider1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/menu_drawer_divider_color</item>
    </style>

</resources>
